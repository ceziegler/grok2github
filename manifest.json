{
    "manifest_version": 3,
    "name": "Chat Code to GitHub",
    "version": "1.0",
    "description": "Copy code from Grok chat and create GitHub repo",
    "permissions": [
      "storage",
      "scripting",
      "activeTab",
      "contextMenus"
    ],
    "host_permissions": [
      "https://x.com/i/grok/*",
      "https://www.grok.com/*",
      "https://*.github.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "minimum_chrome_version": "90"
  }